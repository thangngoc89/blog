{
  "private": true,
  "name": "khoanguyen-dot-me",
  "homepage": "https://khoanguyen.me/",
  "scripts": {
    "git-init": "git submodule init && git submodule update",
    "git-update": "git submodule foreach git pull origin master",
    "lint:js": "eslint --ignore-path .gitignore --fix .",
    "lint:md": "remark --quiet --frail content",
    "lint:css": "stylelint web_modules/**/**/*.scss --syntax scss",
    "lint": "npm run lint:js && npm run lint:md && npm run lint:css",
    "statinamic": "BABEL_ENV=statinamic BABEL_DISABLE_CACHE=1 DEBUG=statinamic:* babel-node scripts/build",
    "start": "npm run statinamic -- --server --dev",
    "build": "npm run statinamic -- --static --production",
    "deploy": "gh-pages --silent --branch master --repo https://$GITHUB_TOKEN@github.com/thangngoc89/thangngoc89.github.io.git --dist dist"
  },
  "statinamic": {
    "assets": "images",
    "CNAME": true,
    "open": false,
    "appcache": true
  },
  "config": {
    "slogan": "Viết ngẫu hứng. Chủ yếu chuyện công nghệ",
    "siteName": "Khoa Nguyen Blog",
    "github": "thangngoc89",
    "twitter": "khoanguyenme",
    "email": "hi@khoanguyen.me",
    "edit-on-github": "https://github.com/thangngoc89/blog-posts/blob/master/",
    "googleAnalyticsUA": "UA-56785612-1",
    "disqus": "khoanguyenme"
  },
  "babel": {
    "presets": [
      "babel-preset-react",
      "babel-preset-es2015",
      "babel-preset-stage-1"
    ],
    "plugins": [
      "babel-plugin-transform-runtime"
    ],
    "env": {
      "statinamic": {
        "plugins": [
          [
            "babel-plugin-webpack-loaders",
            {
              "config": "./scripts/webpack.config.babel.js",
              "verbose": false
            }
          ]
        ]
      }
    }
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "rules": {
      "react/jsx-no-bind": 0
    },
    "extends": [
      "standard",
      "standard-react"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "value-list-comma-newline-after": null
    }
  },
  "remarkConfig": {
    "plugins": {
      "lint": {
        "maximum-heading-length": false,
        "maximum-line-length": false,
        "no-html": false,
        "no-heading-punctuation": false,
        "no-multiple-toplevel-headings": false,
        "no-shortcut-reference-link": false,
        "no-undefined-references": false,
        "list-item-indent": "space",
        "list-item-spacing": false,
        "no-emphasis-as-heading": false
      }
    }
  },
  "devDependencies": {
    "autoprefixer": "^6.3.1",
    "babel-cli": "^6.5.1",
    "babel-core": "^6.5.1",
    "babel-eslint": "^6.0.0",
    "babel-loader": "^6.2.1",
    "babel-plugin-lodash": "^2.0.1",
    "babel-plugin-transform-react-remove-prop-types": "^0.2.2",
    "babel-plugin-transform-runtime": "^6.5.2",
    "babel-plugin-webpack-loaders": "^0.3.2",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-react-hmre": "^1.0.1",
    "babel-preset-stage-1": "^6.3.13",
    "babel-runtime": "^6.5.0",
    "bootstrap": "https://github.com/twbs/bootstrap/archive/6ec9aa34a4b6d43b593b97f9b207410eff8f0152.tar.gz",
    "chalk": "^1.1.1",
    "cross-env": "^1.0.7",
    "css-loader": "^0.17.0",
    "cssnano": "^3.4.0",
    "debug": "^2.2.0",
    "eslint": "2.5.1",
    "eslint-config-standard": "^5.1.0",
    "eslint-config-standard-jsx": "^1.1.1",
    "eslint-config-standard-react": "^2.3.0",
    "eslint-loader": "^1.3.0",
    "eslint-plugin-promise": "^1.0.8",
    "eslint-plugin-react": "^4.0.0",
    "eslint-plugin-standard": "^1.3.2",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.8.5",
    "gh-pages": "^0.11.0",
    "highlight.js": "^9.1.0",
    "history": "^2.0.0",
    "imports-loader": "^0.6.5",
    "invariant": "^2.2.0",
    "json-loader": "^0.5.4",
    "markdown-it": "^6.0.0",
    "markdown-it-toc-and-anchor-fork": "^2.1.1",
    "markdown-it-video": "^0.2.1",
    "node-sass": "^3.4.2",
    "postcss-loader": "^0.8.1",
    "react": "^0.14.6",
    "react-dom": "^0.14.6",
    "react-helmet": "^2.3.1",
    "react-overlays": "^0.6.0",
    "react-redux": "^4.3.0",
    "react-router": "^2.0.0",
    "redux": "^3.3.1",
    "redux-devtools": "^3.0.1",
    "redux-devtools-dock-monitor": "^1.0.1",
    "redux-devtools-log-monitor": "^1.0.2",
    "redux-thunk": "^1.0.3",
    "remark": "^4.1.1",
    "remark-lint": "^3.0.0",
    "sass-loader": "^3.1.2",
    "statinamic": "^0.8.0",
    "strip-markdown": "^0.3.1",
    "style-loader": "^0.13.0",
    "stylelint": "^5.0.0",
    "stylelint-config-standard": "^4.0.0",
    "webpack": "^1.12.11",
    "whatwg-fetch": "^0.9.0"
  },
  "dependencies": {
    "algoliasearch": "^3.12.0",
    "classnames": "^2.2.3",
    "lodash": "^4.3.0",
    "moment": "^2.11.1",
    "react-disqus-thread": "^0.3.1",
    "react-ga": "^1.2.0",
    "react-progress-bar-plus": "^0.2.3",
    "react-window-resize-listener": "^1.0.0",
    "reading-time": "^1.0.2",
    "recompose": "^0.15.0",
    "smoothscroll": "^0.2.2",
    "waypoints": "^4.0.0"
  }
}
